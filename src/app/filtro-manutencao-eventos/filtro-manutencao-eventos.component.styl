html,body{
   height:100% !important;
}

.container{
    width:100%; 
    border: 1px solid red; 
    align-items: center; 
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: center;  
    margin-top: 5%;
}

.table{
  display: table; 
  padding: 1px;
  margin: 1px;
  border: solid 2px RoyalBlue;
  border-radius: 5px;
  width: 50%;
  
}
.row{
  display: table-row; 
  vertical-align: top;
  padding-bottom: 1px;
  border-left: 0px;
  border-radius: 5px;
}

.row-header {
    background: RoyalBlue none repeat scroll 0 0;
    color: white;
    height: 40px;
}

.cell {
  display: table-cell;
  vertical-align: top;
  padding-left: 10px;
  width: auto;
  text-align: left ;
  margin: 0;
  border: solid 1px white;
  border-radius: 5px;
  vertical-align: middle;
  padding: 5px;
  //background-color: white;
}
.td {
  width: 100px;
  font-style:bold;
  padding-top: 0px !important;
  padding-bottom: 0px !important;
}

.cell input {
    width: 95%;
    vertical-align: left;
}