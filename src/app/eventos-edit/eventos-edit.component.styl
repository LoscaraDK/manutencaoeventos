.table{
  display: table; 
  padding: 2px;
  margin: 2px;
  border: solid 2px white;
  
}
.row{
  display: table-row; 
  vertical-align: top;
  padding-bottom: 10px;
  border: solid 1px #00FF00;
  border-left: 0px;
  border-radius: 5px;
}

.row-header {
    background: #002c63 none repeat scroll 0 0;
    color: white;
}

.span-resultado:nth-child(even) {
    background: #d1eaff;
}
.span-resultado:nth-child(odd) {
    background: #96c5ec;
}


.cell{
  display: table-cell;
  vertical-align: top;
  padding-left: 1px;
  width: 300px;
  text-align: center;
  margin: 1px;
  border: solid 1px white;
}
.td {
  width: 100px;
  font-style:italic;
}

input {
    width: 95%;
    vertical-align: left;
}